<h3>Edit Sale Info for sale <%=@sale.id%></h3>
<div class='row'>
  <div class='col-md-12'>
    <div class='panel'>
      <div class='panel-body'>
        <table style="width:100%">
          <tr>
            <th>Current Salesperson/Id</th>
            <th>New Salesperson</th>
            <th>Job Type</th>
            <th>Job Title</th>
            <th align="right">Quantity</th>
            <th align="right">Pages</th>
            <th align="right">Customer</th>
            <th align="right">Mark Up</th>
            <th align="right">Single Sale Amt</th>
            <th align="right">Frequency</th>
            <th align="right">Annual Sales</th>
          </tr>
            <%= form_for @sale, url: sale_path, method: :patch do |f| %>
            <tr>
              <td><%=  @sale.user.name %></td>
              <td><%= f.collection_select :user_id, @salespeople, :id, :name %></td>
              <td><%= f.text_field :job_type%></td>
              <td><%= f.text_field :job_title%></td>
              <td><%= f.text_field :quantity%></td>
              <td><%= f.text_field :pages%></td>
              <td><%= f.text_field :customer%></td>
              <td><%= f.text_field :mark_up%></td>
              <td><%= f.text_field :single_sale%></td>
              <td><%= f.text_field :frequency%></td>
              <td><%=number_to_currency((@sale.frequency * @sale.single_sale))%></td>
            </tr>
            <%= f.submit "Update Sale", :class => "btn btn-primary"%>
            <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
